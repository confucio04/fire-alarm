<footer class="footer-fire">
  {% render 'footer-snippets' %}
</footer>

<style>
  .footer-fire{
      background: {{ section.settings.background }}
  }
</style>
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Logo Footer"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#F4F4F4"
    }
  ],
  "presets": [
    {
      "name": "footer"
    }
  ]
}
{% endschema %}
